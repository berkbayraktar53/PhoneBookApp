@model List<ReportDataModel>
@{
    ViewData["Title"] = "Konum Grafiği";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6" style="display:block;margin-left: auto;margin-right: auto;">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-1" style="text-align:center">Konum Bilgisi Grafiği</h6>
                <canvas id="piechart"></canvas>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid pt-4 px-4">
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/templates/dashmin/lib/chart/chart.min.js"></script>
<script>
    var piechartCanvas = document.getElementById('piechart');
    var cntn = [];
    var count = [];
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            @:cntn.push('@item.Name')
            @:count.push('@item.Count')
        }
    };
    var piechart = new Chart(piechartCanvas, {
        type: 'pie',
        data: {
            labels: cntn,
            datasets: [{
                data: count,
                borderWidth: 0,
                backgroundColor: [
                    'rgb(255,99,132)',
                    'rgb(54,162,235)',
                    'rgb(157,230,41)',
                    'rgb(41,224,230)',
                    'rgb(255,205,86)'
                ],
                hoverBackgroundColor: [
                    'rgb(255,99,132)',
                    'rgb(54,162,235)',
                    'rgb(157,230,41)',
                    'rgb(41,224,230)',
                    'rgb(255,205,86)'
                ]
            }]
        },
        options: {
            responsive: true,
            legend: {
                position: "bottom",
                labels: {
                    boxWidth: 11,
                    fontColor: "#757681",
                    fontSize: 11
                }
            }
        }
    });
</script>