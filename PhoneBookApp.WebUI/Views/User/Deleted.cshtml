@model List<User>
@{
    ViewData["Title"] = "Silinen Kişiler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4 text-center">
                    Silinen Kişiler
                    <a href="/User/Add" class="btn btn-sm btn-success mr-5" style="float:right">Yeni Kişi Ekle</a>
                </h6>
                <div class="table-responsive">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Adı</th>
                                <th scope="col">Soyadı</th>
                                <th scope="col">Firma</th>
                                <th scope="col">İletişim Tipi</th>
                                <th scope="col">İletişim İçeriği</th>
                                <th scope="col">Detay</th>
                                <th scope="col">Geri Yükle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.Company</td>
                                    <td>@user.Contacts[0].Type</td>
                                    <td>@user.Contacts[0].Content</td>
                                    <td><a href="/User/Detail/@user.Id" class="btn btn-sm btn-primary">Detay</a></td>
                                    <td><a href="/User/ChangeStatus/@user.Id" class="btn btn-sm btn-warning">Geri Yükle</a></td>
                                    <td><a href="/User/Delete/@user.Id" onclick="return confirm('Kişi silinecek. Onaylıyor musun?')" class="btn btn-sm btn-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>