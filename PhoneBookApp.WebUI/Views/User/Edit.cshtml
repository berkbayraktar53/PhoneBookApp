@model User
@{
    ViewData["Title"] = "Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4 text-center">@Model.FirstName @Model.LastName - Düzenle</h6>
                <form method="post" asp-action="Edit" asp-controller="User">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IsActive" />
                    <input type="hidden" asp-for="Contacts[0].Id" />
                    <input type="hidden" asp-for="Contacts[0].UserId" />
                    <input type="hidden" asp-for="Contacts[0].IsActive" />
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="FirstName" autocomplete="off" />
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Soyadı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="LastName" autocomplete="off" />
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Şirket</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Company" autocomplete="off" />
                            <span class="text-danger" asp-validation-for="Company"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">İletişim Tipi</label>
                        <div class="col-sm-10">
                            <select class="form-select" asp-for="Contacts[0].Type" id="floatingSelect"
                                    aria-label="Floating label select example">
                                <option value="Telefon">Telefon Numarası</option>
                                <option value="Email">E-mail Adresi</option>
                                <option value="Konum">Konum</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">İletişim</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Contacts[0].Content" autocomplete="off" />
                            <span class="text-danger" asp-validation-for="Contacts[0].Content"></span>
                        </div>
                    </div>
                    <div style="text-align:center">
                        <button type="submit" class="btn btn-success">Güncelle</button>
                        <a href="/User/Index" class="btn btn-primary">Geri Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>